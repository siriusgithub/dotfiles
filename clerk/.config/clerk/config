# custom rofi settings (rofi reads settings from ~/.Xresources)
# but you can override settings here.
rofiopts="-lines 20 -width 500 -i -no-levenshtein-sort"

# custom mpd host
mpd_host=
mpd_port=
mpd_password=

# Number of Songs to be added for "Random Tracks"
value=20

# stop on suspend?
stop_after_suspend=no

# exit after addition of tracks/albums
exit_after_add=no

# use artist or albumartist for random tracks
random_artist=artist

# scrobbler to use. possible values: mpdscribble, mpdas
scrobbler=mpdscribble

# Fill these if scrobbler runs on a different host
# set to 0 if mpdscribble runs locally
ssh_lastfm=0
ssh_host=

# color of the help messages
help_color="#606060"
help_separator_color="#5F5F5F"

# custom keybindings
# global
albumlist="Control+a"
tracklist="Control+t"
queue="Control+q"
toggle="HyperL+Space"
prev="HyperL+comma"
next="HyperL+period"
stop="Alt+F7"
seek="Control+x"
nextalbum="Alt+Shift+F8"
prevalbum="Alt+Shift+F3"

# main menu
help="Alt+h"

# Adding of songs/albums
add="Control+s"
insert="Control+o"
rate="Alt+r"
addplay="Alt+r"
insertplay="Alt+i"
savefav="Alt+s"

# playlist menu
# also used: rate
delete="Alt+d"
crop="Alt+x"
clear="Alt+c"
movedown="Alt+j"
moveup="Alt+k"
goalbum="Alt+a"
gotrack="Alt+t"
playlist="Alt+p"

# table customization
track_width="2"
title_width="20"
artist_width="30"
date_width="14"
# album is much longer in order to keep filename off screen
album_width="200"

# custom widths for playlist
pl_title_width="60"
pl_artist_width="30"
